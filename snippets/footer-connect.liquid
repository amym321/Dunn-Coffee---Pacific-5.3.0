<div class="footer-module footer-connect">
  {% if block.settings.show-mailing-list %}
    {% 
      render 'newsletter', 
      block: block,
    %}
  {% endif %}

  {% if block.settings.show-social-links %}
    <div class="social-networks">
      <ul>
        {% if settings.social-instagram-url != blank %}
          <li class="social-link instagram">
            <div class="social-icon">
              <a href="{{ settings.social-instagram-url | escape }}" target="_blank">
                {% render 'icon' with 'instagram' %}
              </a>
            </div>
          </li>
        {% endif %}
        {% if settings.social-facebook-url != blank %}
          <li class="social-link facebook">
            <div class="social-icon">
              <a href="{{ settings.social-facebook-url | escape }}" target="_blank">
                {% render 'icon' with 'facebook' %}
              </a>
            </div>
          </li>
        {% endif %}
        {% if settings.social-twitter-url != blank %}
          <li class="social-link twitter">
            <div class="social-icon">
              <a href="{{ settings.social-twitter-url | escape }}" target="_blank">
                {% render 'icon' with 'twitter' %}
              </a>
            </div>
          </li>
        {% endif %}
        {% if settings.social-tumblr-url != blank %}
          <li class="social-link tumblr">
            <div class="social-icon">
              <a href="{{ settings.social-tumblr-url | escape }}" target="_blank">
                <svg width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><title>Tumblr</title><path d="M23.853 25.559c-.595.284-1.733.53-2.583.553-2.56.069-3.058-1.799-3.08-3.155v-9.962h6.426V8.151h-6.402V0h-4.688c-.077 0-.212.067-.23.239C13.022 2.734 11.853 7.112 7 8.862v4.133h3.239v10.457c0 3.579 2.64 8.665 9.612 8.546 2.35-.04 4.962-1.026 5.541-1.874l-1.54-4.565" fill="#000" fill-rule="evenodd"/></svg>
              </a>
            </div>
          </li>
        {% endif %}
        {% if settings.social-pinterest-url != blank %}
          <li class="social-link pinterest">
            <div class="social-icon">
              <a href="{{ settings.social-pinterest-url | escape }}" target="_blank">
                {% render 'icon' with 'pinterest' %}
              </a>
            </div>
          </li>
        {% endif %}
        {% if settings.social-kickstarter-url != blank %}
          <li class="social-link kickstarter">
            <div class="social-icon">
              <a href="{{ settings.social-kickstarter-url | escape }}" target="_blank">
                {% render 'icon' with 'kickstarter' %}
              </a>
            </div>
          </li>
        {% endif %}
        {% if settings.social-vimeo-url != blank %}
          <li class="social-link vimeo">
            <div class="social-icon">
              <a href="{{ settings.social-vimeo-url | escape }}" target="_blank">
                {% render 'icon' with 'vimeo' %}
              </a>
            </div>
          </li>
        {% endif %}
        {% if settings.social-youtube-url != blank %}
          <li class="social-link youtube-logo">
            <div class="social-icon">
              <a href="{{ settings.social-youtube-url | escape }}" target="_blank">
                {% render 'icon' with 'youtube' %}
              </a>
            </div>
          </li>
        {% endif %}
        {% if settings.social-email-address != blank %}
          <li class="social-link email">
            <div class="social-icon">
              <a href="mailto:{{ settings.social-email-address | escape }}" target="_blank">
                {% render 'icon' with 'mail' %}
              </a>
            </div>
          </li>
        {% endif %}
        {% if settings.social-rss-url != blank %}
          <li class="social-link rss">
            <div class="social-icon">
              <a href="{{ settings.social-rss-url | escape }}" target="_blank">
                {% render 'icon' with 'rss' %}
              </a>
            </div>
          </li>
        {% endif %}
      </ul>
    </div>
  {% endif %}
</div>
